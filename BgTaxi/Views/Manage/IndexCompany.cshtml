@model BgTaxi.Models.IndexCompanyViewModel
@{
    ViewBag.Title = "Профил";
}

<h2 style="text-align:center">@ViewBag.Title.</h2>
<div class="container">

    <div class="col-md-3">
    <ul class="nav nav-pills nav-stacked">
        <li class="active">@Html.ActionLink("Обща информация", "Index")</li>
        <li >@Html.ActionLink("Шофьори", "Drivers")</li>
        <li>@Html.ActionLink("Диспетчери", "Dispatchers")</li>
        <li>@Html.ActionLink("Автомобили", "Cars")</li>
    </ul>
</div>
    
    <div class="col-md-9">

    <h4>Основна информация за акаунта</h4>
    <hr />

    @using (Html.BeginForm("UpdateCompanyInfo", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @disabled = "disabled" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.EIK, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.EIK, new { @class = "form-control", @disabled = "disabled" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.DDS, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.DDS, new { @class = "form-control", @disabled = "disabled" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Address, new { @class = "col-md-2 control-label"})
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @disabled = "disabled" })
            </div>
        </div>
        <div class="form-group" >
            @Html.LabelFor(m => m.MOL, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.MOL, new { @class = "form-control", @disabled = "disabled" })
            </div>
        </div>
    <div class="form-group" >
        @Html.LabelFor(m => m.UniqueNumber, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.UniqueNumber, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>


    <div  id ="changeBtn"class="btn btn-default" style="float: left;" onclick="change()">Промени</div>
    <div id="submitBtn" class="form-group" style="float: left; visibility: hidden;">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-success" value="Запази" />
        </div>
    </div>

    }

    <script>
        function change() {


            document.getElementById("changeBtn").remove();
            document.getElementById("submitBtn").style.visibility = "visible";

            for (var i in document.getElementsByClassName("form-control")) {
                document.getElementsByClassName("form-control")[i].attributes.removeNamedItem("disabled");
            }



        }

    </script>
    </div>
    </div>
    