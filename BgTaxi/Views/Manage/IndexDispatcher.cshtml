@model BgTaxi.Models.IndexDispatcherViewModel
@{
    ViewBag.Title = "IndexDispatcher";
}

<h2 style="text-align:center">@ViewBag.Title.</h2>
<div class="container">

    <div class="col-md-3">
        <ul class="nav nav-pills nav-stacked">
            <li class="active">@Html.ActionLink("Обща информация", "Index")</li>
            <li>@Html.ActionLink("Справка", "Drivers")</li>
        </ul>
    </div>

    <div class="col-md-9">

        <h4>Основна информация за акаунта</h4>
        <hr />

        @using (Html.BeginForm("UpdateDispatcherInfo", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Telephone, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Telephone, new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.CompanyName, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>
           


            <div id="changeBtn" class="btn btn-default" style="float: left;" onclick="change()">Промени</div>
            <div id="submitBtn" class="form-group" style="float: left; visibility: hidden;">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-success" value="Запази" />
                </div>
            </div>

        }

        <script>
        function change() {
            document.getElementById("changeBtn").remove();
            document.getElementById("submitBtn").style.visibility = "visible";

            for (var i in document.getElementsByClassName("form-control")) {
                document.getElementsByClassName("form-control")[i].attributes.removeNamedItem("disabled");
            }
        }

        </script>
    </div>

    <div>@Html.ActionLink("Към работния панел", "Dashboard")</div>
</div>


